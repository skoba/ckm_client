#!/usr/bin/env ruby
$:.unshift(File.expand_path('../../lib', __FILE__))
require 'openehr/ckm_client'

case ARGV.shift
when 'help'
   puts <<USAGE
Usage:
  ckmc <command> [<args>]

Commands supported:
  fetch    Retrieve archetype by archetype_id
  search   query archetype by keyword
  help     show this help
USAGE
when 'fetch'
  puts OpenEHR::CKMClient.new.fetch(ARGV[0])
when 'search'
  puts 'Not yet implemented'
end
